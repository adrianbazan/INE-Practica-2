<dl>
  <dt>Título</dt>
  <dd><%= @film.title %></dd>
  <dt>Productora</dt>
  <dd><%= @film.producer.name %></dd>
  <dt>Publicado el:</dt>
  <dd><%= @film.produced_at.strftime("%d/%m/%Y at %I:%M%p") %></dd>
  <dt>Directores</dt>
  <dd><%= @film.director_names %></dd>
  <dt>COD</dt>
  <dd><%= @film.cod %></dd>
  <dt>Blurb</dt>
  <%= RedCloth.new(@film.blurb).to_html.html_safe if @film.blurb %>
  <dt>Precio</dt>
  <dd><%= @film.price %></dd>
  <dt>Duraciónt</dt>
  <dd><%= @film.duration %></dd>
  <dt>Imagen de Portada</dt>
  <% if @film.cover_image.exists? then %>
    <dd><%= image_tag @film.cover_image.url %></dd>
  <% else %>
    <dd><%= image_tag '/missing.png' %></dd>
    <p> No hay imagen asignada, por favor suba una. </p>
  <% end %>
</dl>

